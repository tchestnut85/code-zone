<section class="dashboard">
    <div class='new-blog-link'>
        <a href='/new-blog' class='create-link'>New Blog Post</a>
    </div>
    <div class='is-size-4 past-blog-heading'>
        <h3>Your Past Blogs</h3>
    </div>

    {{#each blogs}}
    <article class="post">
        <div class="card">
            <div class='card-header'>
                <span class='card-header-title is-centered'><a href="/blog/{{id}}">{{title}}</a></span>
            </div>
            <div class="card-content content">
                <span>{{content}}</span>
            </div>
            <div class='card-content username'>By: {{User.username}}</div>
            <div class='card-footer'>
                <div class='card-footer-item time-stamp'>{{timeStamp createdAt}}</div>
                <a class='card-footer-item' href="/dashboard/edit/{{id}}">
                    <div>Edit Blog</div>
                </a>
                <a class='card-footer-item' href="/blog/{{id}}">
                    <div>Comments: {{Comments.length}}</div>
                </a>

            </div>
        </div>
    </article>

    {{> comments blogs.Comments}}

    {{/each}}
</section>